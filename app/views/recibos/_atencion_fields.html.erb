<div class="nested-fields">
	<div class="row">
		<div class="form-group">
			<%= f.label t('servicio', :default => 'servicio').humanize, class: "col-sm-2 control-label text-right" %>
			<div class="col-sm-8">
				<%= f.collection_select :servicio_id, Servicio.all, :id, :name, {prompt: false}, {class: "form-control"}  %>
			</div>
			<div class="col-sm-1 text-right">
				<%= f.hidden_field :_destroy %>
				<%= link_to_remove_association "Borrar", f, :class => 'btn btn-danger'  %>
			</div>
		</div>
	</div>
	<div class="form-group">
		<div class="row">
			<%= f.label t('cantidad', :default => 'cantidad').humanize, class: "col-sm-2 control-label" %>
			<div class="col-sm-3">
				<div class=" input-group ">
					<span class="input-group-addon">B/.</span>
					<%= f.text_field :cantidad, class: "form-control" %> 
				</div>	
			</div>

			<%= f.label t('descuento', :default => 'descuento').humanize, class: "col-sm-2 control-label" %>
			<div class="col-sm-3">
				<div class=" input-group ">
					<span class="input-group-addon">B/.</span>
					<%= f.text_field :descuento, class: "form-control" %> 
				</div>
			</div>			
		</div>
	</div>	
	<hr>
</div>
