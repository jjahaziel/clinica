<div class="page-header">
  <%= link_to new_servicio_tipo_path, class: 'btn btn-primary' do %>
  <span class="glyphicon glyphicon-plus"></span>
  <%= t('new')%> Servicio tipo
  <% end %>
  <h1><%= t('listing')%> <%= t('servicio_tipo', :default => 'servicio_tipo').humanize.pluralize %></h1>
</div>

<div class="row">
  <div class="col-lg-6">
    <p>     
      <p><%= link_to "Importar Servicio Tipos de archivo CSV", new_servicio_tipo_import_path %></p>
    </p>
  </div>

  <div class="col-lg-6">
    <p>
    </p>
  </div>
</div><!--/row-->

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th><%= t('tipo', :default => 'tipo').humanize %></th>
        <th><%= t('descripcion', :default => 'descripcion').humanize %></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @servicio_tipos) do |servicio_tipo| %>      
      <td><%= servicio_tipo.tipo %></td>  
      <td><%= servicio_tipo.descripcion %></td> 
      <td><%= link_to t('show'), servicio_tipo %></td>
      <td><%= link_to t('edit'), edit_servicio_tipo_path(servicio_tipo) %></td>
      <% end %>
    </tbody>
  </table>
</div>
