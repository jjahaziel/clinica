<div class="page-header">
  <%= link_to new_doctor_path, class: 'btn btn-primary' do %>
  <span class="glyphicon glyphicon-plus"></span>
  <%= t('new')%> Doctor
  <% end %>
  <h1><%= t('listing')%> <%= t('doctor', :default => 'doctor').humanize.pluralize %></h1>
</div>

<div class="row">
  <div class="col-lg-6">
    <p>     
      <p><%= link_to "Importar Doctores de archivo CSV", new_doctor_import_path %></p>
    </p>
  </div>

  <div class="col-lg-6">
    <p>
    </p>
  </div>
</div><!--/row-->

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th><%= t('numero_doctor', :default => 'numero_doctor').humanize %></th>
        <th><%= t('especialidades', :default => 'especialidades').humanize %></th>
        <th><%= t('persona', :default => 'persona').humanize %></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @doctores) do |doctor| %>

      <td><%= doctor.numero_doctor %></td>  
      <td><%= doctor.especialidades %></td> 
      <td><%= doctor.persona.name unless doctor.persona.nil? %></td>      
      <td><%= link_to t('show'), doctor %></td>
      <td><%= link_to t('edit'), edit_doctor_path(doctor) %></td>
      <% end %>
    </tbody>
  </table>
</div>
