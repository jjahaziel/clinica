<div class="page-header">
  <%= link_to new_persona_path, class: 'btn btn-primary' do %>
  <span class="glyphicon glyphicon-plus"></span>
  <%= t('new')%> Persona
  <% end %>
  <h1><%= t('listing')%> <%= t('persona', :default => 'persona').humanize.pluralize %></h1>
</div>


<div class="table-responsive">
  <table id="personas" 
  class="table table-striped table-bordered" 
  cellspacing="0" 
  width="100%", 
  data-source="<%= personas_path(format: :json) %>">
    <thead>
      <tr>
        <th><%= t('persona', :default => 'nombre').humanize %></th>
        <th><%= t('cedula', :default => 'cedula').humanize %></th>
        <th><%= t('telefono', :default => 'telefono').humanize %></th>
        <th><%= t('contacto_emergencia', :default => 'contacto_emergencia').humanize %></th>
        <th><%= t('telefono_emergencia', :default => 'telefono_emergencia').humanize %></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    </tbody>
  </table>
</div>
